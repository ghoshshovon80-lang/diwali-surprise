            width: 100%;
            height: 100%;
            background: black;
            display: none;
        }
        #final {
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-size: 3em;
            text-align: center;
            background: linear-gradient(to bottom, #ff4500, #ffd700);
            animation: fireworks 2s infinite;
        }
        @keyframes fireworks {
            0% { background: linear-gradient(to bottom, #ff4500, #ffd700); }
            50% { background: linear-gradient(to bottom, #ffd700, #ff4500); }
            100% { background: linear-gradient(to bottom, #ff4500, #ffd700); }
        }
